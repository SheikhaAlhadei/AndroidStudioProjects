<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView

        android:id="@+id/inst"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:scaleType="fitStart"
        android:src="@drawable/insst"


        app:layout_constraintBottom_toTopOf="@id/userr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userr"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@drawable/text"
        android:hint="Phone number , username or email "

        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inst" />

    <EditText
        android:id="@+id/user"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/text"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@id/userr" />

    <Button


        android:id="@+id/bottom1"
        android:layout_width="400dp"
        android:layout_height="60dp"

        android:layout_marginTop="20dp"
        android:text="Login"
        android:textSize="20dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@id/user"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/or"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="20dp"


        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="535dp" />

    <EditText
        android:id="@+id/line1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"


        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/or"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom1" />

    <EditText
        android:id="@+id/line2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"


        app:layout_constraintStart_toEndOf="@id/or"
        app:layout_constraintTop_toBottomOf="@id/bottom1" />


</androidx.constraintlayout.widget.ConstraintLayout>